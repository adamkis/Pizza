<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ingredients_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <include
            layout="@layout/header_pizza_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/add_to_cart"
        style="@style/wide_button_orange">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="@dimen/cart_icon_size"
                android:layout_height="@dimen/cart_icon_size"
                android:layout_marginRight="@dimen/padding_m"
                android:src="@drawable/cart_small"/>
            <TextView
                style="@style/text_wide_button_bold"
                android:layout_marginRight="@dimen/padding_m"
                android:text="@string/add_to_cart"/>
            <TextView
                android:id="@+id/item_price"
                style="@style/text_wide_button_bold_italic"/>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>