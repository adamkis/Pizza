<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/wide_button_orange">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/cart_icon_size"
            android:layout_height="@dimen/cart_icon_size"
            android:layout_marginRight="@dimen/padding_m"/>
        <TextView
            android:id="@+id/text_main"
            style="@style/text_wide_button_bold"
            android:layout_marginRight="@dimen/padding_m"/>
        <TextView
            android:id="@+id/text_price"
            style="@style/text_wide_button_bold_italic"/>
    </LinearLayout>

</FrameLayout>
