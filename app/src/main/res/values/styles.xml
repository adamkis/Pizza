<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="toolbar" >
        <item name="android:layout_height">@dimen/height_toolbar</item>
        <item name="android:minHeight">@dimen/height_toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:popupTheme" tools:ignore="NewApi">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="title_toolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/font_20</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="wide_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/padding_16</item>
    </style>

    <style name="text_wide_button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="text_wide_button_bold" parent="text_wide_button">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_wide_button_bold_italic" parent="text_wide_button">
        <item name="android:textStyle">bold|italic</item>
    </style>

</resources>
